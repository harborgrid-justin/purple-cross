# =============================================================================
# Purple Cross - Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and update with your actual values
# NEVER commit .env.production to version control
# =============================================================================

# Application Version
VERSION=1.0.0

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
POSTGRES_DB=purple_cross
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION_USE_STRONG_PASSWORD

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION_USE_STRONG_PASSWORD

# =============================================================================
# Backend Configuration
# =============================================================================
# JWT Secret - Use a strong random string (min 32 characters)
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_USE_STRONG_RANDOM_STRING_MIN_32_CHARS

# JWT Expiration (e.g., 7d, 24h, 60m)
JWT_EXPIRES_IN=7d

# CORS Origin - Your frontend URL
CORS_ORIGIN=https://your-domain.com

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Skip database migrations on startup (true/false)
SKIP_MIGRATIONS=false

# Number of backend replicas
BACKEND_REPLICAS=2

# =============================================================================
# Frontend Configuration
# =============================================================================
# Vite API Base URL - Your backend API URL
VITE_API_BASE_URL=https://api.your-domain.com/api/v1

# Frontend port (80 for HTTP, 443 for HTTPS)
FRONTEND_PORT=80

# =============================================================================
# Nginx Configuration
# =============================================================================
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Nginx Proxy Ports
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# Email Configuration (SendGrid)
# =============================================================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# SMS Configuration (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# Monitoring & Error Tracking (Sentry)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_KEEP_DAYS=7
BACKUP_KEEP_WEEKS=4
BACKUP_KEEP_MONTHS=6

# =============================================================================
# Performance Tuning
# =============================================================================
# PostgreSQL connection pool
DATABASE_CONNECTION_LIMIT=10

# Node.js Memory Limits (in MB)
NODE_OPTIONS=--max-old-space-size=2048

# =============================================================================
# Security
# =============================================================================
# Enable HTTPS in production
ENABLE_HTTPS=true

# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

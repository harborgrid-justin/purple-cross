# Purple Cross Frontend - Production Environment Variables
# Copy this file to .env.production and update with your values

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_BASE_URL=https://api.purplecross.com

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# Error Tracking (Sentry)
# =============================================================================
# Get your DSN from https://sentry.io
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=1.0.0

# =============================================================================
# Analytics (Google Analytics)
# =============================================================================
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_GA_ENABLED=true

# =============================================================================
# Build Configuration
# =============================================================================
NODE_ENV=production
VITE_APP_NAME=Purple Cross
VITE_APP_VERSION=1.0.0

# =============================================================================
# Optional Services
# =============================================================================
# Mixpanel Analytics
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# LogRocket Session Replay
VITE_LOGROCKET_APP_ID=your-logrocket-app-id

# Intercom Customer Support
VITE_INTERCOM_APP_ID=your-intercom-app-id

# =============================================================================
# Security
# =============================================================================
# Public encryption key for client-side encryption
VITE_PUBLIC_KEY=your-public-key

# =============================================================================
# Branding
# =============================================================================
VITE_COMPANY_NAME=Purple Cross Veterinary
VITE_SUPPORT_EMAIL=support@purplecross.com
VITE_SUPPORT_PHONE=+1-800-555-0123

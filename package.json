{
  "name": "purple-cross-monorepo",
  "version": "1.0.0",
  "description": "Enterprise-grade veterinary practice management platform",
  "private": true,
  "workspaces": [
    "backend",
    "backend-nestjs",
    "frontend",
    "frontend-nextjs"
  ],
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../frontend-nextjs && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:backend-nestjs": "cd backend-nestjs && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:nextjs": "cd frontend-nextjs && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend-nestjs\" \"npm run dev:nextjs\"",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:backend-nestjs": "cd backend-nestjs && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:nextjs": "cd frontend-nextjs && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "cd frontend && npm run test:e2e",
    "test:e2e:open": "cd frontend && npm run test:e2e:open",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:nextjs": "cd frontend-nextjs && npm run lint",
    "lint:fix": "npm run lint:backend -- --fix && npm run lint:frontend -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "npm run typecheck:backend && npm run typecheck:frontend && npm run typecheck:nextjs",
    "typecheck:backend": "cd backend && npm run typecheck",
    "typecheck:frontend": "cd frontend && npm run typecheck",
    "typecheck:nextjs": "cd frontend-nextjs && npm run type-check",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "prisma:studio": "cd backend && npm run prisma:studio",
    "prisma:migrate": "cd backend && npm run prisma:migrate",
    "prisma:generate": "cd backend && npm run prisma:generate",
    "prisma:seed": "cd backend && npm run prisma:seed",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dist frontend/dist",
    "postinstall": "cd backend && npx prisma generate"
  },
  "keywords": [
    "veterinary",
    "practice-management",
    "enterprise",
    "healthcare",
    "typescript",
    "prisma",
    "react"
  ],
  "author": "Purple Cross",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
